@using MVCHelpers.Models

<div>
@using (Html.BeginForm())
{
    <div>
        @Html.Label("Num1", "Enter First Number:")
        @Html.TextBox("Num1")
    </div>
    <div>
        @Html.Label("Num2", "Enter Second Number:")
        @Html.TextBox("Num2")
    </div>
    <input type="submit" value="Add Numbers" />

    <h3>@Html.Display("Num1" + "Num2")</h3>
}

    
</div>
