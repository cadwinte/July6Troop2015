<div class="container">
    <div ng-controller="TrailsController as vm">
        <h1><strong>Palo Duro Canyon Bike Trails</strong></h1>
        <hr />
        <div class="row">
            <div class="col-md-6" ng-repeat="trail in vm.trails">
                <p>#{{trail.TrailNumber}} Trail Name: {{trail.Name}}</p>
                <p>Trail Status: {{trail.Status}}</p>
                <p>Updated: {{trail.StatusUpdate}}</p>
                <span style='display:block !important; width: 120px; text-align: center; font-family: sans-serif; font-size: 12px;'><a href='http://www.wunderground.com/cgi-bin/findweather/getForecast?query=Canyon, TX' title='Canyon, TX Weather Forecast'><img src='http://weathersticker.wunderground.com/weathersticker/miniStates/language/english/US/TX/Canyon.gif' alt='Find more about Weather in Canyon, TX' /></a></span>
                <br />
                <br />
            </div>
        </div>
    </div>
    <div ng-controller="CreateTrailController as vm">
        <h2>Create Trail</h2>
        <form ng-submit="vm.add()">
            <div>
                <label>
                    Trail #: <input ng-model="vm.TrailNumber">
                </label>
            </div>
            <div>
                <label>
                    Trail Name: <input ng-model="vm.Name">
                </label>
            </div>
            <div>
                <label>
                    Trail Status:
                    <select name="status" ng-model="vm.Status" ng-options="status for status in vm.statuses" ng-required="true"></select>
                </label>
            </div>
            <div>
                <label>
                    Update Time: <input ng-model="vm.StatusUpdate">
                </label>
            </div>
            <div>
                <input type="submit" value="Add"/>
            </div>
        </form>
    </div>
</div>