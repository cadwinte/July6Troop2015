<h1>The Pet Store</h1>

<div class="container">
    <div ng-controller="PetStoreController as petList">
        <div ng-repeat="category in petList.pets">
            <h2 style="text-align:center; padding-top:100px;">{{category.name}}</h2>
            <br />
            <div ng-repeat="pet in category.animals" class="col-md-4" style="margin-top:-40px">
                <h3 style="text-align:center;">{{pet.name}}</h3>
                <img ng-src="{{pet.url}}" style="width: 200px; height: 200px; display:block; margin: 0 auto;"/>
            </div>
        </div>
    </div>
</div>
